{% extends 'base.html.twig' %}

{% block title %}Tasks
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-6 mt-5 offset-md-3">
				<h1>Tasks</h1>

				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ task.id }}</td>
						</tr>
						<tr>
							<th>Name</th>
							<td>{{ task.name }}</td>
						</tr>
						<tr>
							<th>Description</th>
							<td>{{ task.Description }}</td>
						</tr>
						<tr>
							<th>Deadline_date</th>
							<td>{{ task.DeadlineDate ? task.DeadlineDate|date('Y-m-d') : '' }}</td>
						</tr>
						<tr>
							<th>Priority</th>
							<td>{{ task.Priority }}</td>
						</tr>
						<tr>
							<th>Status</th>
							<td>{{ task.Status == 1? "TODO":''  }}</td>
							<td>{{ task.Status == 2? "In Progress":''  }}</td>
							<td>{{ task.Status == 3? "Done":''  }}</td>
						</tr>
					</tbody>
				</table>

				<a class="btn btn-ls btn-primary" href="{{ path('app_tasks_index',{'id': task.Project.id}) }}">Back to list</a>

				<a class="btn btn-ls btn-primary" href="{{ path('app_tasks_edit', {'id': task.id}) }}">Edit</a>

				{{ include('tasks/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
